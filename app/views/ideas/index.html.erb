


<div class="container">
  <% @ideas.each do |idea|  %>
    <div>
      <hr class="line">
      <small>
      <a class="toggle-description">
        <i class="fa fa-plus open-icon" class="plus"> </i>
        <i class="fa fa-minus close-icon" class="plus" style="display:none;" > </i>
      </a>
      </small>

      <span class="idea-title"><%= idea.title %></span>
      <div class="idea-description" style="display:none">
        <p><%=  idea.description %></p>
        <i class="fa fa-user" aria-hidden="true"></i>
        <span> <%= link_to  idea.user&.full_name, idea_path(idea) || "[deleted]" , class: "user_link" %>&nbsp&nbsp&nbsp</span>

      </div>
    </div>
  <% end %>
</div>
